#login-wrapper
  width: 100%;
  height: 100%;
  color: #cccccc;
  /*如果想做背景图片 可以给标签一个class 直接添加背景图*/
  background-image: url("@/assets/images/loginBg.png");
  background-size cover
  position: relative;
  .content {
    width 447px
    height 364px
    padding 83px 75px
    position: absolute;
    background-image: url("@/assets/images/login_dialog_back.png");
    background-size cover
    box-shadow: 0 0 120px #245988;
    border-radius 35px
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto; /* 有了这个就自动居中了 */
    .login_dialog{
      .input{
        margin 15px 0
        width 100%
        background rgba(0,0,0,0)!important
      }
      .loginBtn{
        margin-top 70px
        width 100%
        background #B7EAFF!important
        border none!important
        color #1B617E!important
        font-weight bold
      }
    }
  }
